@model IEnumerable<ProjetoFinalManuela.Models.Estado>

@{
    ViewData["Title"] = "Index";
}

<h1>Cadastro de Estado</h1>

<p>
    <a asp-action="Create" class="btn-principal">Cadastrar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EstadoName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoName)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.EstadoId" class="btn-principal"><i class="fa-solid fa-pen-to-square"></i></a> 
                    <a asp-action="Details" asp-route-id="@item.EstadoId" class="btn-principal"><i class="fa-solid fa-circle-info"></i></a> 
                    <a asp-action="Delete" asp-route-id="@item.EstadoId" class="btn-principal"><i class="fa-solid fa-trash-can"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
